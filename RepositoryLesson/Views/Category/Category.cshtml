@model List<Categories>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Kategoriler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>

    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
					<th scope="col"></th>
                   
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.CategoryName </td>
                        <td> <a href="@Url.Action("RemoveCategory","Category", item)"><i class="bi bi-trash-fill text-danger"></i></a></td>
                        @* <td> <a><i class="bi bi-info-circle-fill text-info"></i></a> </td> *@
                    </tr>
                    
                    i++;
                }




            </tbody>
        </table>
        @* <button type="button" class="btn btn-success px-4 float-end mt-0" style="font-size: 20px; height: 40px;"><i class="bi bi-plus-square" style="padding-top:5px"></i></button> *@
        <label>Kategori Ekle</label>
        <form action="AddCategory" method="post">
            <div class="mb-3">
                <label class="form-label">Kategori Adı</label>
                <input type="text" class="form-control" name="CategoryName">
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>

    <script>
    </script>

</body>
</html>