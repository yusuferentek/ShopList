@model List<ShopListProductMapping>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Listeler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <a href="@Url.Action("AddShopListMap")"><button type="button" class="btn btn-success px-4 float-end mb-4">Ürün Ekle</button></a>

    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ürün Adı</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">Durum</th>
                    <th scope="col">Alındı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@* @item.Product.ProductName *@ </td>
                        <td>@* @item.Product.Category.CategoryName *@</td>
						<td>@item.Description</td>
                        @* @if (item.Product.IsPurchased == true)
                        {
                            <td>Alındı</td>
                        }
                        else
                        {
                            <td>Alınmadı</td>
                        } *@
                        <td><input class="form-check-input" type="checkbox"></td>
                    </tr>
                
                    i++;
                }
            </tbody>
        </table>

    </div>

    <script>
    </script>

</body>
</html>